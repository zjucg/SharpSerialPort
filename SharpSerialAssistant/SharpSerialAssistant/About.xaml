<Window x:Class="SharpSerialAssistant.About"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SharpSerialAssistant"
      mc:Ignorable="d"  Name="AboutWindow"
      Height="200" Width="350" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
      Title="关于串口助手">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="150*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="5">
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">串口调试助手</TextBlock>
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">Serial Assistant</TextBlock>
        </StackPanel>
        <Grid Grid.Row="1">
            <StackPanel Grid.Column="0" Margin="10">
                <TextBlock>版本编号：Verison 1.0</TextBlock>
                <TextBlock>更新日期：2018年11月27日 星期二</TextBlock>
                <TextBlock>软件作者：Ray. Chen</TextBlock>
                <TextBlock>反馈邮箱：zjug@zju.edu.cn</TextBlock>
                <TextBlock>界面设计：源于开源代码</TextBlock>
                <TextBlock>其他说明：开放源码，采用MVP设计模式</TextBlock>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
